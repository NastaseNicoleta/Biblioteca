@model BibliotecaISS.Models.Abonat

@{
    ViewData["Title"] = "Procesare Abonare";
}

<style>
    body {
        background-image: url('https://images.pexels.com/photos/261806/pexels-photo-261806.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
        background-size: cover;
        background-position: center;
        color: white;
        font-family: Arial, sans-serif;
        text-align: center;
        font-size: 20px;
    }

    .form-container {
        width: 50%; /* Lățimea containerului de formular */
        margin: 0 auto; /* Centrare pe pagină */
        background-color: rgba(0, 0, 0, 0.5); /* Fundal semi-transparent */
        padding: 20px;
        border-radius: 10px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #007bff; /* Culoare pentru buton */
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #0056b3; /* Culoare pentru buton la hover */
        }
</style>

<h1>Confirmare Abonare</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div class="form-container">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form asp-action="ProcesareAbonare" method="post">
        <div class="form-group">
            @Html.LabelFor(model => model.CNP, new { @class = "control-label" })
            @Html.EditorFor(model => model.CNP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CNP, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Nume, new { @class = "control-label" })
            @Html.EditorFor(model => model.Nume, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nume, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Adresa, new { @class = "control-label" })
            @Html.EditorFor(model => model.Adresa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Adresa, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Telefon, new { @class = "control-label" })
            @Html.EditorFor(model => model.Telefon, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
