@model BibliotecaISS.Models.Abonat

@{
    ViewData["Title"] = "Abonare";
}

<style>
    body {
        background-image: url('https://images.pexels.com/photos/261806/pexels-photo-261806.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
        background-size: cover;
        background-position: center;
        color: white;
        font-family: Arial, sans-serif;
        text-align: center;
        font-size: 20px;
    }

    .form-container {
        width: 50%; /* Lățimea containerului de formular */
        margin: 0 auto; /* Centrare pe pagină */
        background-color: rgba(0, 0, 0, 0.5); /* Fundal semi-transparent */
        padding: 20px;
        border-radius: 10px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #007bff; /* culoare pentru buton */
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #0056b3; /* culoare pentru buton la hover */
        }
</style>


    <h1>Abonare la Bibliotecă</h1>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="form-container">
        <form asp-action="ProcesareAbonare" method="post">
            <div class="form-group">
                <label for="CNP">CNP:</label>
                <input type="text" class="form-control" id="CNP" name="CNP">
            </div>
            <div class="form-group">
                <label for="Nume">Nume:</label>
                <input type="text" class="form-control" id="Nume" name="Nume">
            </div>
            <div class="form-group">
                <label for="Adresa">Adresa:</label>
                <input type="text" class="form-control" id="Adresa" name="Adresa">
            </div>
            <div class="form-group">
                <label for="Telefon">Telefon:</label>
                <input type="text" class="form-control" id="Telefon" name="Telefon">
            </div>
            <button type="submit" class="btn btn-primary">Abonează-te</button>
        </form>
    </div>
</div>
